{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QTI Results Scoring Updates",
  "type": "object",
  "additionalProperties": false,
  "required": ["items"],
  "properties": {
    "assessmentIdentifier": {
      "type": "string",
      "minLength": 1
    },
    "candidateIdentifier": {
      "type": "string",
      "minLength": 1
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["identifier", "criteria"],
        "properties": {
          "identifier": {
            "type": "string",
            "minLength": 1
          },
          "criteria": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["met"],
              "properties": {
                "criterionText": {
                  "type": "string",
                  "minLength": 1
                },
                "met": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}
